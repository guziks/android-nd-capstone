<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="@dimen/contact_photo_width"
        android:layout_height="@dimen/contact_photo_height"
        android:layout_margin="@dimen/contact_margin"
        android:contentDescription="@string/description_contact_image"
        android:src="@android:drawable/sym_def_app_icon"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="John Doe"/>

    <CheckBox
        android:id="@+id/contact_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/contact_margin"/>

</LinearLayout>