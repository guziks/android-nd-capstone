<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="@dimen/widget_width"
        android:layout_height="@dimen/widget_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/description_to_buy_icon"
        android:src="@drawable/ic_shopping_cart"
        android:tint="@color/swipeToBuy"/>

    <TextView
        android:id="@+id/count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/appwidget_description"
        android:paddingBottom="@dimen/widget_count_shift"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold|italic"
        tools:text="#"/>

</RelativeLayout>